<?xml version="1.0" encoding="utf-8"?>
<!-- Theme Settings
Theme: Dark
Margin Bottom: 3dp
Keyboard Height: 30%
Horizontal Margin: 200dp
Vertical spacing: 4dp
Horizontal spacing: 2dp
-->
<keyboard name="Termux Keyboard" bottom_row="false" locale_extra_keys="false">
	<modmap>
		<shift a="*" b="\#"/>

		<shift a="[" b="&lt;"/>
		<shift a="]" b="&gt;"/>
		<shift a="(" b="{"/>
		<shift a=")" b="}"/>

		<shift a="/" b="?"/>
		<shift a=":" b="!"/>
		<shift a=";" b=","/>
		<shift a="%" b="'"/>
		<shift a="@" b="&quot;"/>
		<shift a="\\" b="`"/>

		<shift a="=" b="^"/>
		<shift a="-" b="&amp;"/>
		<shift a="+" b="$"/>
		<shift a="_" b="|"/>

		<shift a="" b="~"/> <!-- "" maps to arrows c -->
		</modmap>
	<row>
		<key c="q" se="esc"/>
		<key c="w"/>
		<key c="e"/>
		<key c="r"/>
		<key c="t"/>
		<key c="y"/>
		<key c="u"/>
		<key c="i" sw="[" se="]"/>
		<key c="o" sw="(" se=")"/>
		<key c="p" sw="*"/>
	</row>
	<row>
		<key shift="0.5" c="a" nw="tab"/>
		<key c="s"/>
		<key c="d"/>
		<key c="f"/>
		<key c="g"/>
		<key c="h"/>
		<key c="j" sw="7" se="8" ne="9"/>
		<key c="k" sw="4" se="5" ne="6"/>
		<key c="l" sw="1" se="2" ne="3" nw="0"/>
	</row>
	<row>
		<key width="1.5" c="shift" sw="loc capslock"/>
		<key c="z"/>
		<key c="x"/>
		<key c="c"/>
		<key c="v"/>
		<key c="b"/>
		<key c="n" sw="/" ne=":" se=";"/>
		<key c="m" sw="%" se="\\" ne="@"/>
		<key width="1.5" c="backspace" ne="delete"/>
	</row>
	<row height="0.95">
		<key width="1.7" c="ctrl"/>
		<key width="1.1" c="." se="loc alt" sw="fn" nw="loc compose"/>
		<key width="4.4" c="space" nw="=" ne="+" se="-" sw="_"/>
		<key width="1.1" c="" n="up" e="right" w="left" s="down"/>
		<key width="1.7" c="enter" ne="action" se="config"/>
	</row>
</keyboard>
